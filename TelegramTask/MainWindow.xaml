            </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Left" Margin="5">
            <Ellipse Width="30" Height="30" >
                <Ellipse.Fill>
                    <ImageBrush ImageSource="images\tgicon.png"></ImageBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>
        
        
    </Grid>
</Window>
